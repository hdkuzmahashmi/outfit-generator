@model IList<OutfitGeneratorWeb.Models.WomenCategory>

@{
    ViewBag.Title = "New Yorker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="row" id="button_back">
        <div class="col-sm-6">
            <div class="controls">
                @{
                    if (ViewBag.Segment != null)
                    {
                        if (ViewBag.Segment == 1)
                        {
                            <a href="@Url.Action("GetWomenCategories", "Category")" class="previous button1">
                                <span><i class="fa fa-angle-left" style="font-size:30px;color:red"></i></span>
                            </a>
                        }
                    
                       else if (ViewBag.Segment == 2)
                        {
                            <a href="@Url.Action("GetManCategories", "Category")" class="previous button1">
                                <span><i class="fa fa-angle-left" style="font-size:30px;color:red"></i></span>
                            </a>
                        }
                    }
                }
            </div>
        </div>
        <div class="">
            <div class="catHeading">Step 2 - Choose Further</div>
        </div>
    </div>

    
    <div id="catDiv">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <a class="cat catOverlay" href="@Url.Action("GetProductsBySubCategories","SubCategory",new { apiUrl=item.apiUrl,webCategory=item.Web_Category,variId=item.ProductVariantId,segment=ViewBag.Segment})">
                            <img src="@item.ImageUrl" onerror="this.onerror=null;this.src='https://demooutfitgenerator.azurewebsites.net/ui/images/image-not-found.jpg';">
                            <div class="catTitle">@item.CategoryName</div>
                        </a>
                    </div>
                }
            }
